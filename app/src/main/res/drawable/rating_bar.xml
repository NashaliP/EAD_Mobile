<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Empty star (background) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Light gray for unfilled stars -->
        </shape>
    </item>

    <!-- Partial star (for fractional ratings) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="#FFD700" /> <!-- Gold for partially filled stars -->
            </shape>
        </clip>
    </item>

    <!-- Filled star -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#FFD700" /> <!-- Gold for filled stars -->
            </shape>
        </clip>
    </item>
</layer-list>
